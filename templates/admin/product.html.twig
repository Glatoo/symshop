{% extends 'base.html.twig' %}

{% block body %}
    <article style="background-color: #E2E2E2;">
        <h1>Admin</h1>
        <div class="products">
            <h2>Produkty:</h2>
            <table class="admin-product-table">
                <tr>
                    <th class="table_id">ID</th>
                    <th class="table_name"><label for="name">Name</label></th>
                    <th class="table_brand"><label for="brand">Brand</label></th>
                    <th class="table_name"><label for="description">Description</label></th>
                    <th class="table_name"><label for="price">Price</label></th>
                    <th class="table_pcs"><label for="pcs">Pcs</label></th>
                    <th class="table_size"><label for="size">Size</label></th>
                    <th class="table_brand"><label for="image">Image</label></th>
                    <th class="table_size"><label for="submit">Submit</label></th>
                </tr>
                {% for product in products %}
                    <tr>
                        <form enctype="multipart/form-data" method="post" name="form"  action="{{ path('admin_product_edit', {product:product.getId()}) }}">
                            <td class="table_id">{{ product.getId() }}</td>
                            <td class="table_name"><input type="text" value="{{ product.getName() }}" name="name" id="name"> </td>
                            <td class="table_brand"><input type="text" value="{{ product.getBrand() }}" name="brand" id="brand"></td>
                            <td class="table_brand"><textarea name="description" id="description">{{ product.getDescription() }}</textarea></td>
                            <td class="table_pcs"><input type="number" value="{{ product.getPrice() }}" name="price" id="price"></td>
                            <td class="table_pcs"><input type="number" value="{{ product.getPcs() }}" name="pcs" id="pcs"></td>
                            <td class="table_size"><input type="number" value="{{ product.getSize() }}" name="size" id="size"></td>
                            <td class="table_brand"><input type="file" id="image" accept="image/jpg" name="image" value="{{ product.getImg() }}"></td>
                            <td class="table_size"><input type="submit" value="Edit" name="submit" id="submit"></td>
                        </form>
                    </tr>

                {% endfor %}

            </table>
        </div>
    </article>

{% endblock %}

