{# templates/blog/layout.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <article>
        <section>
            <div class="contact-us">
                <h1>{% trans %}CONTACT_US{% endtrans %}</h1>
                <h4>{% trans %}ANY_QUESTIONS{% endtrans %}</h4>
            </div>
            <div class="contact">
                <div class="contact-box">
                    <div>
                        <img src="{{ asset("images/marker.png") }}" alt="marker">
                        <p>City</p>
                        <p>Adress</p>
                        <p>Postal code</p>
                    </div>
                </div>

                <div class="contact-box">
                    <div>
                        <img src="{{ asset("images/email.png") }}" alt="email">
                        <p>email@mail.com</p>
                    </div>
                </div>

                <div class="contact-box">
                    <div>
                        <img src="{{ asset("images/phone.png") }}" alt="phone">
                        <p>+421 454 420 666</p>
                    </div>
                </div>
            </div>
        </section>

        <section class="map">
            <h1> {% trans %}FIND_US_HERE{% endtrans %}</h1>
            <div id="mapid" style="height: 50rem;">
            </div>
        </section>
    </article>
{% endblock %}